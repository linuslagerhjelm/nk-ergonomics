{
  "manifest_version": 2,

  "name": "NK Ergonomics",
  "description": "This is an extension that unobtrusively reminds you to take breaks",
  "version": "1.1",

  "browser_action": {
    "default_icon": "resources/img/NK-Logo.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background/background.js", "resources/js/jquery.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "http://localhost/",
    "http://*/*"
  ]
}